##
# Gemfile
#
# @updated 05-12-15
#
# This is the base Gemfile file for Middleman.
##

# RubyGems - Source
source "https://rubygems.org"

# Ruby - Version
ruby "2.2.0"

# Middleman Core
gem "middleman-core", "3.3.12"

# Middleman Livereload - Auto-refresh on change
gem "middleman-livereload", "3.4.2"

# Middleman S3 Sync - Allows sync between middleman build and Amazon S3
gem "middleman-s3_sync", "3.0.46"

# Middleman Pagination - Allows pagination for proxy pages
gem "middleman-pagination", "1.2.0"

# Middleman React - Allows for JSX compilation
gem "middleman-react", "0.13.1"

# SASS - Syntactically Awesome Stylesheets Yo
gem "sass", "3.4.13"

# Kramdown - Markdown processor
gem "kramdown", "1.7.0"

# Uglifier - JavaScript minifier
gem "uglifier", "2.7.1"
